    "version": "2.0.0",
    "tasks": [
        {
            "label": "Automate Git",
            "type": "shell",
            "command": "python test.py --source ${input:getSourceDestination} --branch ${input:getBranchName}",
            "windows": {
                "command": "python test.py --source ${input:getSourceDestination} --branch ${input:getBranchName}"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        }
